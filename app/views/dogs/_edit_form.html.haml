= form_for @dog, :html => {multipart: true} do |f|
  - if @dog.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dog.errors.count, "error")} prohibited this dog from being saved:"
      %ul
        - @dog.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Change the picture?"
    = f.file_field :picture

  .field
    = f.label "Change the name?"
    = f.text_field :name, placeholder: "Name"
  .field
    = f.label "Change the names it responds to? (Seperate each by a comma!)"
    = f.text_field :responds_to, placeholder: "Names It Responds To"
  .field
    = f.label "Change the breed?"
    = f.text_field :breed, placeholder: "Breed"
  .field
    = f.label "Change the main color of the fur?"
    = f.text_field :main_color, placeholder: "Black", required: true
  .field
    = f.label "Change the other colors of the dog's fur? (Seperate each by a comma!)"
    = f.text_field :secondary_colors, placeholder: "Brown, White, Blue", required: true
  .field
    = f.label "Change the age?"
    = f.select(:age, ["Select Age", "Puppy", "Young", "Adult", "Old"])
    %br/
    %br/
  .field
    = f.label "Edit the gender?"
    = f.select(:gender, ["Select Gender", "Male", "Female"])
    %br/
    %br/
    / = f.text_field :age
  .field
    = f.label "Change the features? (Seperate each by a comma!)"
    / # = f.select(:features,  ["Select a Feature", "Head", "Back", "Tail", ])
    = f.text_field :features, placeholder: "Feature Tags"
  .field
    = f.label "Change the description?"
    = f.text_area :unique_features
    %br/
  .field
    = f.label "Still lost?"
    = f.check_box :is_lost
  .field
    = f.label "...or is it still found?"
    = f.check_box :is_found
  / .field
  /   = f.label :hero_id
  /   = f.number_field :hero_id
  .field
    = f.label "Is this the correct date?"
    = f.date_select :date_found
    %br/
    %br/
    %br/
  .field
    = f.label "Change the location?"
    = f.text_field :location, placeholder: "Location Tags"
  .field
    = f.label "Has this dog been returned to its master?"
    = f.check_box :has_returned
  .actions
    = f.submit 'Post Dog!'
