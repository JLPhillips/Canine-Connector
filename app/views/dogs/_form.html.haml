= form_for @dog, :html => {multipart: true} do |f|
  - if @dog.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dog.errors.count, "error")} prohibited this dog from being saved:"
      %ul
        - @dog.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Let's see what it looks like!"
    = f.file_field :picture, required: true

  .field
    = f.label "Did it have a name tag? If not, just give it a name."
    = f.text_field :name, placeholder: "Fido", required: true
  .field
    = f.label "What are some names it responds to? (Seperate by commas!)"
    = f.text_field :responds_to, placeholder: "Itchy, Scratchy, Sam", required: true
  .field
    = f.label "What breed does it look like? If more than one, say Mix, or Mutt."
    = f.text_field :breed, placeholder: "Collie Mix", required: true
  .field
    = f.label "Choose an age range from the dropdown below!"
    = f.select(:age, ["Select Age", "Puppy", "Young", "Adult", "Old"])
    %br/
    %br/
  .field
    = f.label "What gender is it?"
    = f.select(:gender, ["Select Gender", "Male", "Female"])
    %br/
    %br/
    / = f.text_field :age
  .field
    = f.label "What are some quick features? Seperate different ones by commas!"
    / # = f.select(:features,  ["Select a Feature", "Head", "Back", "Tail", ])
    = f.text_field :features, placeholder: "Black, White Spot, Tall, Smelly", required: true
  .field
    = f.label "Now write a longer description with more detailed features."
    = f.text_area :unique_features, placeholder: "He doesn't like shoes, or at least, mine.", required: true
    %br/
  .field
    = f.label "Check here if this is a dog you have lost and are looking for."
    = f.check_box :is_lost, required: true
  .field
    = f.label "...or check here if you have found this dog and want to find its owner!"
    = f.check_box :is_found, required: true
  / .field
  /   = f.label :hero_id
  /   = f.number_field :hero_id
  .field
    = f.label "Please tell us the date you either lost or found this dog."
    = f.date_select :date_found, required: true
    %br/
    %br/
    %br/
  .field
    = f.label "Please give a general location you lost/found the dog."
    = f.text_field :location, placeholder: "Downtown Franklin", required: true
  .actions
    = f.submit 'Post Dog!'
