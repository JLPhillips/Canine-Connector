.row
  .12-small.columns
    .dog-profile-container
      .dogatar
        = image_tag @dog.picture
      .dog-stats
        %h1= @dog.name
        %h2 Also responds to
        %h2= @dog.responds_to
        %h2= @dog.breed
        %h3= @dog.age
      .the-rest

      %p#notice= notice

      / %p
      /   %b Name:
      /   = @dog.name
      / %p
      /   %b Breed:
      /   = @dog.breed
      / %p
      /   %b Age:
      /   = @dog.age
      / %p
      /   %b Features:
      /   = @dog.features
      / %p
      /   %b Unique features:
      /   = @dog.unique_features
      / %p
      /   %b Is lost:
      /   = @dog.is_lost
      / %p
      /   %b Is found:
      /   = @dog.is_found
      / %p
      /   %b Has returned:
      /   = @dog.has_returned
      / %p
      /   %b Hero:
      /   = @dog.hero_id
      / %p
      /   %b Date found:
      /   = @dog.date_found
      / %p
      /   %b Location:
      /   = @dog.location

      - if @dog.is_lost? && @dog.user != current_user
        = link_to 'I think this is my dog.', "#"
      -elsif @dog.is_found? && @dog.user != current_user
        = link_to "I think I found this dog.", "#"

      - if @dog.user == current_user

        = link_to "Delete", dog_path, :method => :delete, :data => { :confirm => 'Are you sure?' }
        = link_to "Edit", edit_dog_path(@dog)
        = link_to 'Back', dogs_path
